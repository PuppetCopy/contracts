{
  "name": "@puppet/contracts",
  "license": "BSL-1.1",
  "version": "0.1.0",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "test": "forge test --match-contract TradingTest -vvv",
    "test:target": "bun run test --match-test AllocationTest",
    "test:fork": "forge test --match-contract TradingForkTest -vvvv --fork-url=arbitrum",
    "build": "forge build",
    "build:sizes": "forge build --sizes || true",
    "build:prod": "FOUNDRY_PROFILE=prod forge build",
    "generate": "bun run script/generate.ts",
    "build:ts": "tsc -b",
    "script:deploy:base": "SCRIPT_NAME=DeployBase FOUNDRY_PROFILE=prod bun ./script/deploy.ts",
    "script:deploy:position": "SCRIPT_NAME=DeployPosition FOUNDRY_PROFILE=prod bun ./script/deploy.ts",
    "script:deploy:user-router": "SCRIPT_NAME=DeployUserRouter FOUNDRY_PROFILE=prod bun ./script/deploy.ts",
    "docgen": "forge doc --out '.docgen' --build",
    "gas-report": "forge test --match-contract TradingTest --gas-report",
    "lint:sol": "forge fmt --check",
    "lint:fmt": "forge fmt",
    "lint": "forge lint src --severity high --severity med"
  },
  "files": [
    "./src",
    "./deployments.json",
    "./dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js"
    },
    "./abi/*": {
      "types": "./dist/types/abi/*.d.ts",
      "import": "./dist/esm/abi/*.js"
    },
    "./events": {
      "types": "./dist/types/events.d.ts",
      "import": "./dist/esm/events.js"
    },
    "./gmx": {
      "types": "./dist/types/gmx/index.d.ts",
      "import": "./dist/esm/gmx/index.js"
    },
    "./gmx/*": {
      "types": "./dist/types/gmx/*.d.ts",
      "import": "./dist/esm/gmx/*.js"
    },
    "./deployments": "./deployments.json"
  },
  "dependencies": {},
  "devDependencies": {
    "@openzeppelin/contracts": "5.4.0",
    "@types/bun": "catalog:",
    "dotenv": "catalog:",
    "forge-std": "github:foundry-rs/forge-std#v1.12.0",
    "typescript": "catalog:",
    "viem": "catalog:"
  }
}
